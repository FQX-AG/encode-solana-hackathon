{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "noUnusedLocals": false,
    "noEmit": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    // sources
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true
  },
  "include": ["src/", "tests/"]
}
